    </changeSet>
    <changeSet author="dbryzz" id="ddl-000-15">
        <addForeignKeyConstraint baseColumnNames="challenge_id" baseTableName="subscriptions" constraintName="fk_subscriptions_challenges_challenge_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="challenges" validate="true"/>
    </changeSet>
    <changeSet author="dbryzz" id="ddl-000-16">
        <addForeignKeyConstraint baseColumnNames="session_id" baseTableName="subscriptions" constraintName="fk_subscriptions_sessions_session_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="sessions" validate="true"/>
    </changeSet>
    <changeSet author="dbryzz" id="ddl-000-17">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="user_tokens" constraintName="fk_user_tokens_users_user_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="_users" validate="true"/>
    </changeSet>
    <changeSet author="dbryzz" id="ddl-000-18">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="challenge_reports" constraintName="fk_challenge_reports_users_user_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="_users" validate="true"/>
    </changeSet>
    <changeSet author="dbryzz" id="ddl-000-19">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="subscriptions" constraintName="fk_subscriptions_users_user_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="_users" validate="true"/>
    </changeSet>
</databaseChangeLog>
